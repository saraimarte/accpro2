---
// Import Layouts
import MainLayout from '../layouts/MainLayout.astro';
import FlexContainer from '../layouts/FlexContainer.astro'
//Import Components
import HeaderRow from '../components/HeaderRow.astro';
import GradeCard from '../components/GradeCard.astro';
import DragCol from '../components/DragCol.astro';
//Import Styles
import '../styles/gridStyles.css';
import '../styles/global.css';

var accounts = [
	'Cash',
	'Revenue',
	'Accounts Receivable', 
	'Common Stock',
	'Supplies',
	'Accounts Payable',
	'Equipment',
	'Dividends',
    'Notes Payable',
    'Phone Bill', 
	'Sales Revenue',
	'Tuition Payable',
	'Equipment Expense',
    'Service Revenue', 
	'Salaries Payable', 
	'Truck',
	'Land',
	'Expenses',
	'Utilities Expense',
	'Bank Loan',
	'Couch',
	'Buildings',
	'Ticket Revenue',
	'Logo', 
	'Mortgage Payable',
	'Taxes Payable',
	'Patent',
	'Interest Payable',	
	'Car',
	'Unearned Revenue',
	'Computer', 
	'Rent Expense'

]

var answers = [
'A','S','A','S','A','L','A','S','L','L','S','L','S','S','L','A','A', 'S', 'S','L','A','A','S','A','L','L','A','L','A','L','A','S'
];

---

<MainLayout> 
	<script src = "../scripts/script.js"></script>
	<HeaderRow title = "" />
	<FlexContainer> 
		<DragCol colNumber = "1" cardTitle = "Items">	
			{accounts.map((account, index) => (<div class = 'item'><div class = {`item-content ${answers[index]}`}> {account}</div></div>))}
		</DragCol>
		<DragCol colNumber = "2" cardTitle = "Assets">  </DragCol>
		<DragCol colNumber = "3" cardTitle = "Liabilities"> </DragCol>
		<DragCol colNumber = "4" cardTitle = "Stockholder's Equity"> </DragCol>
	
	</FlexContainer>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/web-animations/2.3.2/web-animations.min.js"></script>
	<script src="https://cdn.jsdelivr.net/gh/haltu/muuri@0.9.5/dist/muuri.min.js"></script>
	<script src = "../scripts/grade.js"></script>

</MainLayout>

<style>
	.title{
		font-family: 'Roboto', sans-serif;
		color:white;
		text-align:center;
	}

</style>

