---
import GradeContent from '../components/GradeContent.astro';
---

<div class = "gradeCard">
    <GradeContent/>
    <button id = "btn">Grade</button>

</div>
<style>
    .gradeCard{
        background-color:white;
        height:100px;
        min-width:min-content;
        width:30%;
        border-radius:20px;
        display:flex;
        justify-content:end;
        align-items:center;
        padding:0 1em;
    }
    button{
        border-radius:20px;
        border:none;
        background-color:#de2e53;
        color:white;
        padding:1em 2em;
        font-size:1em;
        border-radius:50px;
        font-size:1.3em;

    }
    button:hover{
        background-color: #ca2a4d;
    }
</style>