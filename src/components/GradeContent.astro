<div class = "col3">
    <div id = "displayWhenGraded" class = "displayWhenGraded"> 
        <div class = "countContainer"> 
            <div id = "rightCount" class = "count"> </div>
            <h1 id = "rightHeading"  > Right Answers </h1>
        </div>
        <div class = "countContainer"> 
            <div id = "wrongCount" class = "count">  </div>
            <h1 id = "wrongHeading"> Wrong Answers </h1>
        </div>
    </div>
</div>

<style>
    .col3{
        /*border:2px solid black;*/
        width:25%;
        height:100%;
        border-radius: 20px;
        display:flex;
        gap:1em;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: white;

    }
    .displayWhenGraded{
        /*border:5px solid black;*/
        display: none;
        flex-direction: column;
        gap:1em;
    }

    .countContainer{
        /*border:5px solid orange;*/
        display:flex;
        flex-direction: column;
        height:100%;
        justify-content: center;
        align-items: center;
        
    }
    .count{
       /* border:5px solid red;*/
        text-align:center;
        height:50%;
        position:relative;
        top:30px;
        font-size:180px;
        height:min-content;
    }

    h1{
       /* border:5px solid purple;*/
        height:50%;

    }

   
    
    @media only screen and (max-width: 1500px) {
    .col3 {
      width:100%;
      min-height:50%;
      height:min-content;
      padding:20px;
    }

    .displayWhenGraded{
        flex-direction: row;
    }

    .countContainer{
        gap:0;
    }
    h1{
        text-align:center;
        width:50%;
        min-width:min-content;
    }
  }

  @media only screen and (max-width: 600px) {
    .displayWhenGraded{
        flex-direction: column;
    }
    .count{
        font-size:80px;
    }


  }
</style>