<div class = "col3" id = "col3">
    <div id = "displayWhenGraded" class = "displayWhenGraded"> 
        <div class = "countContainer"> 
            <h1 class = "heading" id = "rightHeading"  > Right: </h1>
            <div id = "rightCount" class = "count"> </div>

        </div>
        <div class = "countContainer"> 
            <h1 class = "heading" id = "wrongHeading"> Wrong: </h1>
            <div id = "wrongCount" class = "count">  </div>

        </div>
    </div>
</div>

<style>

   .heading{
        font-size:2em;
    }
    
    .col3{
        /*border:2px solid black;*/
        width:100%;
        height:100%;
        border-radius: 20px;
        display:none;
        gap:1em;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: white;

    }
    #displayWhenGraded{
      /*  border:5px solid black;*/
        display: flex;
        flex-direction: row;
        gap:2em;
        padding:1em;
    }

    .countContainer{
        /*border:5px solid orange;*/
        display:flex;
        flex-direction: row;
        height:100%;
        justify-content: center;
        align-items: center;
        
    }
    .count{
        /*border:5px solid red;*/
        text-align:center;
        height:50%;
        height:min-content;
        font-size:2em;
        font-weight:bold;
        position: relative;
        left:0.2em;
    }

    h1{
       /* border:5px solid purple;*/
        height:50%;

    }

   
    
</style>




